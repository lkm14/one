<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper     
    PUBLIC "-//mybatis.org//DTD SQL Mapper 3.0//EN"      
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="one.project.mall.member.mapper.MemberMapper">
	<select id="login" parameterType="MemberVO" resultType="MemberVO">
		SELECT * FROM t_member WHERE member_id=#{member_id} and
		member_pwd=#{member_pwd}
	</select>

	<select id="searchZipcode" parameterType="String" resultType="ZipcodeVO">
		SELECT substr(zipcode, 1, 3) AS "zipcode1",
		substr(zipcode, 5, 3) AS
		"zipcode2",
		trim(sido || ' ' || gugun || ' ' || dong || ' ' ||
		ri || ' '
		|| bunji) AS "addr1"
		FROM zipcode
		WHERE dong like '%' || #{area} || '%'
	</select>
	<select id="confirmId" parameterType="String" resultType="MemberVO">
		SELECT
		* FROM t_member where member_id=#{member_id}
	</select>
	<insert id="regist" parameterType="MemberVO">
		INSERT
		INTO t_member(member_id
		,member_pwd ,member_name,member_birth
		,member_addr1 ,member_addr2
		,member_zipcode,member_email ,member_phone
		,member_lastip)
		VALUES(#{member_id},#{member_pwd},#{member_name},#{member_birth}
		,#{member_addr1} ,#{member_addr2},#{member_zipcode}
		,#{member_email},#{member_phone},#{member_lastip})
	</insert>
</mapper>